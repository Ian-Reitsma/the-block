# Interval in seconds between mempool purge iterations.
# Set to 0 or leave unset to disable the background purge loop (default).
TB_PURGE_LOOP_SECS=0

# Launch-governor controls; keep enabled so gates guard DNS/markets.
TB_GOVERNOR_ENABLED=1
TB_GOVERNOR_DB=governor_db
# Set to 1 to emit signed decision sidecars when TB_NODE_KEY_HEX is configured.
TB_GOVERNOR_SIGN=0
# Rolling window in seconds; choose a multiple of the epoch (default 240s â‰ˆ 2 epochs).
TB_GOVERNOR_WINDOW_SECS=240
