{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DnsRecord",
  "type": "object",
  "required": ["domain", "txt", "pubkey", "sig"],
  "properties": {
    "domain": { "type": "string" },
    "txt": { "type": "string" },
    "pubkey": { "type": "string", "pattern": "^[0-9a-fA-F]{64}$" },
    "sig": { "type": "string", "pattern": "^[0-9a-fA-F]{128}$" }
  },
  "additionalProperties": false
}
