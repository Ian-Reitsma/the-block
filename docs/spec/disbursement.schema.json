{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DisbursementPayload",
  "description": "Treasury disbursement proposal payload for governance-approved fund distributions.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique disbursement identifier"
    },
    "title": {
      "type": "string",
      "description": "Human-readable title for the disbursement proposal"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the disbursement purpose"
    },
    "amount_ct": {
      "type": "integer",
      "minimum": 0,
      "description": "Total CT amount to disburse"
    },
    "amount_it": {
      "type": "integer",
      "minimum": 0,
      "description": "Industrial ledger share (sub-ledger accounting, not a separate token)"
    },
    "destination": {
      "type": "string",
      "description": "Recipient account address (must start with 'ct1')",
      "pattern": "^ct1[a-zA-Z0-9]+$"
    },
    "expected_receipts": {
      "type": "array",
      "description": "Expected receipt breakdown (must sum to amount_ct/amount_it)",
      "items": {
        "type": "object",
        "properties": {
          "recipient": {
            "type": "string",
            "pattern": "^ct1[a-zA-Z0-9]+$"
          },
          "amount_ct": {
            "type": "integer",
            "minimum": 0
          },
          "amount_it": {
            "type": "integer",
            "minimum": 0
          },
          "purpose": {
            "type": "string"
          }
        },
        "required": ["recipient", "amount_ct"]
      }
    },
    "timelock_epochs": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of epochs to wait after approval before execution"
    },
    "proposer": {
      "type": "string",
      "description": "Account that proposed the disbursement"
    },
    "created_at": {
      "type": "integer",
      "description": "Unix timestamp of proposal creation"
    }
  },
  "required": ["id", "title", "amount_ct", "destination"],
  "additionalProperties": true,
  "examples": [
    {
      "id": "disb-2024-001",
      "title": "Q1 Developer Grants",
      "description": "Quarterly grants for ecosystem developers",
      "amount_ct": 100000,
      "amount_it": 0,
      "destination": "ct1abc123...",
      "expected_receipts": [
        {"recipient": "ct1abc123...", "amount_ct": 100000, "purpose": "Developer grants"}
      ],
      "timelock_epochs": 3,
      "proposer": "ct1proposer...",
      "created_at": 1710000000
    }
  ],
  "$comment": "See governance/src/treasury.rs for validation rules. expected_receipts must sum to amount_ct/amount_it."
}
