{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DisbursementPayload",
  "description": "Treasury disbursement payload shared by RPC/CLI/explorer and validated in governance/src/treasury.rs.",
  "type": "object",
  "properties": {
    "proposal": {
      "type": "object",
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "summary": { "type": "string", "minLength": 1 },
        "deps": {
          "type": "array",
          "items": { "type": "integer", "minimum": 1 },
          "maxItems": 100,
          "uniqueItems": true,
          "description": "Optional dependency list; executor honors proposal.deps before memo hints."
        },
        "attachments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "uri": { "type": "string" }
            },
            "required": ["name", "uri"],
            "additionalProperties": false
          }
        },
        "quorum": {
          "type": "object",
          "properties": {
            "operators_ppm": { "type": "integer", "minimum": 0, "maximum": 1000000 },
            "builders_ppm": { "type": "integer", "minimum": 0, "maximum": 1000000 }
          },
          "required": ["operators_ppm", "builders_ppm"],
          "additionalProperties": false
        },
        "vote_window_epochs": { "type": "integer", "minimum": 1 },
        "timelock_epochs": { "type": "integer", "minimum": 1 },
        "rollback_window_epochs": { "type": "integer", "minimum": 1 }
      },
      "required": ["title", "summary", "quorum"],
      "additionalProperties": true
    },
    "disbursement": {
      "type": "object",
      "properties": {
        "destination": {
          "type": "string",
          "pattern": "^tb1[a-zA-Z0-9]+$",
          "description": "Recipient address; governance validation rejects non-tb1 prefixes."
        },
        "amount": { "type": "integer", "minimum": 1 },
        "memo": { "type": "string", "maxLength": 8192 },
        "scheduled_epoch": { "type": "integer", "minimum": 1 },
        "expected_receipts": {
          "type": "array",
          "description": "Optional receipt breakdown that must sum to amount.",
          "items": {
            "type": "object",
            "properties": {
              "account": { "type": "string" },
              "amount": { "type": "integer", "minimum": 1 }
            },
            "required": ["account", "amount"],
            "additionalProperties": false
          }
        }
      },
      "required": ["destination", "amount", "memo", "scheduled_epoch"],
      "additionalProperties": false
    }
  },
  "required": ["disbursement"],
  "additionalProperties": false,
  "examples": [
    {
      "proposal": {
        "title": "2025-Q1 Treasury Grants",
        "summary": "Fund three core contributors and the security retainer.",
        "deps": [1203, 1207],
        "attachments": [{ "name": "proposal", "uri": "ipfs://bafy..." }],
        "quorum": { "operators_ppm": 670000, "builders_ppm": 670000 },
        "vote_window_epochs": 6,
        "timelock_epochs": 2,
        "rollback_window_epochs": 1
      },
      "disbursement": {
        "destination": "tb1qqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqe4tqx9",
        "amount": 125000000,
        "memo": "Core grants Q1",
        "scheduled_epoch": 180500,
        "expected_receipts": [
          { "account": "foundation", "amount": 100000000 },
          { "account": "audit-retainer", "amount": 25000000 }
        ]
      }
    }
  ],
  "$comment": "See governance/src/treasury.rs for validation rules; executor clamps memo size to 8KiB and dependency lists to 100 entries."
}
